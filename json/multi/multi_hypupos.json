{
    "vocabulary": {
        "min_count": 1
    },
    "dataset_reader": {
        "type": "sequence_multi_tagging",
        "word_tag_delimiter": "<Deli>",
        "token_indexers": {
            "tokens": {
                "type": "single_id",
                "lowercase_tokens": true
            },
            "token_characters": {
                "type": "characters"
            }
        },
        "tasks": [
            "hyp",
            "upos"
        ],
        "domains": [
            "hyp",
            "uni"
        ]
    },
    "evaluate_on_test": true,
    "model": {
        "type": "multi_tagger",
        "tasks": [
            "hyp",
            "upos"
        ],
        "domains": [
            "hyp",
            "uni"
        ],
        "text_field_embedder": {
            "tokens": {
                "type": "embedding",
                "embedding_dim": 50,
                "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.50d.txt.gz",
                "trainable": true,
                "scale_grad_by_freq": false
            },
            "token_characters": {
                "type": "character_encoding",
                "embedding": {
                    "embedding_dim": 25
                },
                "encoder": {
                    "type": "gru",
                    "input_size": 25,
                    "hidden_size": 25,
                    "num_layers": 2,
                    "dropout": 0.25,
                    "bidirectional": true
                }
            }
        },
        "stacked_encoder": {
            "type": "gru",
            "input_size": 100,
            "hidden_size": 300,
            "num_layers": 2,
            "dropout": 0.5,
            "bidirectional": true
        },
        "is_crf": true,
        "initializer": [
            [
                "stacked_encoder._module.weight*",
                {
                    "type": "xavier_uniform"
                }
            ],
            [
                "tag_projection_layer.*._module.weight",
                {
                    "type": "xavier_uniform"
                }
            ],
            [
                ".*.token_embedder_token_characters._encoder.*.weight",
                {
                    "type": "xavier_uniform"
                }
            ],
            [
                ".*.*bias",
                {
                    "type": "constant",
                    "val": 0.0
                }
            ]
        ],
        "regularizer": [
            [
                "transitions$",
                {
                    "type": "l2",
                    "alpha": 0.01
                }
            ]
        ]
    },
    "train_iterator": {
        "type": "multi",
        "batch_size": 32,
        "tasks": [
            "hyp",
            "upos"
        ]
    },
    "val_iterator": {
        "type": "basic",
        "batch_size": 32
    },
    "trainer": {
        "num_epochs": 100,
        "patience": 10,
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        },
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 2
        },
        "grad_norm": 5.0,
        "validation_metric": "+f1-measure-overall"
    }
}